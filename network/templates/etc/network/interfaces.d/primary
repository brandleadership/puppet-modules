# Primary
# =======
auto <%= iface_name %>
iface <%= iface_name %> inet static
	# Address
	address <%= iface_address %>
	netmask <%= iface_netmask %>
<% unless iface_gateway.empty? -%>
	gateway <%= iface_gateway %>
<% end -%>

	# DNS
	dns-nameservers <%= iface_nameservers.join(' ') %>
	dns-search <%= iface_search %>

	<%= iface_options %>
